    <root>
      <priority value="ERROR" />
      <appender-ref ref="rollingFile" />
    </root>
    <!-- levels: DEBUG, INFO, WARN, ERROR, FATAL -->
    <logger name="NHibernate">
      <level value="ERROR" />
    </logger>
    <logger name="NHibernate.SQL">
      <level value="ERROR" />
    </logger>
